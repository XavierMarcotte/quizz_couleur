{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["node_modules/.prisma/client/**"]
      }
    },
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "functions": {
    "api/**/*": {
      "runtime": "nodejs18.x"
    }
  }
}
